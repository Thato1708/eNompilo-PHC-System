@model eNompilo.v3._0._1.Models.Counselling.CounsellingAppointment

@{
    ViewData["Title"] = "Cancel";
}

<div class="margined-page pt-4">

<h1>Cancel</h1>

<h2>Are you sure you want to cancel this appointment?</h2>
<div>
    <hr />
    <dl class="row" style="margin-left:auto;margin-right:auto;">
        <dt class = "col-sm-2 mb-4">
            Session Mode
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionPreference)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Reasons for Booking
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingReasons)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Details on Reasons
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChallengesSpecific)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Appointment Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreferredDate)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Appointment Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreferredTime)
        </dd>
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.PatientFile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientFile.Id)
        </dd>
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Archived)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Archived)
        </dd>
    </dl>
    
    <form asp-action="Cancel">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancel Appointment" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
</div>