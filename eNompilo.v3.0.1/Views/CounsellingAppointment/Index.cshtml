@model IEnumerable<eNompilo.v3._0._1.Models.Counselling.CounsellingAppointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page pt-4">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="dtCouApp" class="table table-striped" style="margin-left:auto;margin-right:auto;">
        <thead>
            <tr>
                <th>
                    Preferred Attendance
                </th>
                <th>
                    Booking Reasons
                </th>
                <th>
                    Reasons Specified
                </th>
                <th>
                    Preferred Date
                </th>
                <th>
                    Preferred Time
                </th>
                <th>
                    Patient
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.PatientFile)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.Archived)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SessionPreference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingReasons)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChallengesSpecific)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreferredDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreferredTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.FirstName)
                        @Html.DisplayFor(modelItem => item.Patient.LastName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.PatientFile.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Archived)
                </td>*@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square-fill text-secondary"></i></a> |
                        <a asp-action="Cancel" asp-route-id="@item.Id"><i class="bi bi-trash-fill text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

