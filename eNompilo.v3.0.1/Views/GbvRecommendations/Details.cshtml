    <script>
        // Wait for the document to be ready
        $(document).ready(function () {
            // Select the button by its ID
            $('#btnRepor567t').click(function () {
                // Replace this with the appropriate selector for your content
                var contentToPrint = $('#report').html();
                document.body.innerHTML = contentToPrint;
                window.print();
                location.reload();
            });
        });
    </script>
</head>

