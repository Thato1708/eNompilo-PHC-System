@model eNompilo.v3._0._1.Models.GBV.GbvRecommendations

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<button class="btn btn-danger" id="btnReport">Print</button>

<!DOCTYPE html>
<html>
<head>
    <title>Click Function Example</title>
</head>
<body>
    <dl class="row" style="margin-left:auto; margin-right:auto;">
        <dt class="col-sm-2 mb-4">
            Name of Practitioner
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model=>Model.PractitionerId)
        </dd>
        <dl class="row" style="margin-left:auto; margin-right:auto;">
            <dt class="col-sm-2 mb-4">
                Name of patient
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model=>Model.PatientId)
            </dd>
            <dl class="row" style="margin-left:auto; margin-right:auto;">
                <dt class="col-sm-2 mb-4">
                    Date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(Model=>Model.Date)
                </dd>
                <dl class="row" style="margin-left:auto; margin-right:auto;">
                    <dt class="col-sm-2 mb-4">
                        Is the patient reffered for further medical treatment
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(Model=>Model.Reffered)
                    </dd>
                    </div>
                    </div>
</body>
</html>



    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $('#btnReport').click(function () {
            document.body.innerHTML = document.all.item("report").innerHTML
            window.print()
            window.location.reload()


        })
    </script>
                        



        

        
