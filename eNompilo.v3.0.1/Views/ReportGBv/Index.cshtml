@model IEnumerable<eNompilo.v3._0._1.Models.GBV.ReportGBV>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page pt-4">
    <h1>Index</h1>

    <p>
        <a asp-action="report">Report GBV</a>
    </p>
    <table id="dtCouApp" class="table table-striped" style="margin-left:auto;margin-right:auto;">
        <thead>
            <tr>
                <th>I am the: </th>
                <th>
                   Would you like to stay anonymous:
                </th>
                <th>
                    Incident Type:
                </th>
                <th>
                    Preferred method of communication:
                </th>
                <th>
                    Would you like to be booked for counselling:
                </th>               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentityType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IncidentType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommunicationType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CounsellingBooking)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.FirstName)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Patient.LastName)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Cancel" asp-route-id="@item.Id">Cancel</a>|
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
