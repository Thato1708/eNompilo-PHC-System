@model eNompilo.v3._0._1.Models.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "UserDetails";
}

<div class="margined-page pt-4">
    <div>
        <h2>User Details (@Html.DisplayFor(model => model.AppUser.FirstName) @Html.DisplayFor(model => model.AppUser.LastName))</h2>
        <hr />
        <dl class="row" style="margin-left:auto;margin-right:auto;">
            <dt class="col-sm-2 mb-4">
                @Html.DisplayNameFor(model => model.AppUser.IdNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.IdNumber)
            </dd>

            <dt class="col-sm-2 mb-4">
                Full Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Titles). @Html.DisplayFor(model => model.AppUser.FirstName) @Html.DisplayFor(model => model.AppUser.LastName)
            </dd>

            <dt class="col-sm-2 mb-4">
                @Html.DisplayNameFor(model => model.AppUser.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.PhoneNumber)
            </dd>

            <dt class="col-sm-2 mb-4">
                @Html.DisplayNameFor(model => model.AppUser.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Email)
            </dd>

            <dt class="col-sm-2 mb-4">
                @Html.DisplayNameFor(model => model.AppUser.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.CreatedOn)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="EditUser" asp-route-id="@Model?.AppUser.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>